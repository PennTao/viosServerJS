extends layout

block content
	div(class='row')
		div(class= 'col-md-offset-3 col-xs-12 col-sm-12 col-md-5 well well-sm')
			legend Profile
			form(action = '/updateprofile', method = 'post', role = 'form')
				
				div(class = 'form-group')
					label Email
						input(type = 'email', class= 'form-control', name = 'email', id = 'email',value = email)
				div(class = 'form-group',id = 'genderselect')
					label Gender
						div(class = 'row-fluid')
							-	if(gender == 'male'){
									label(class = 'radio-line')
										input(type = 'radio', name = 'gender', id = 'radioMale', value = 'male',checked = 'checked')
										| Male
						
									label(class = 'radio-line')
										input(type = 'radio', name = 'gender', id = 'radioFemale', value = 'female')
										| Female
							-	}else{
									label(class = 'radio-line')
										input(type = 'radio', name = 'gender', id = 'radioMale', value = 'male')
										| Male
						
									label(class = 'radio-line')
										input(type = 'radio', name = 'gender', id = 'radioFemale', value = 'female',checked = 'checked')
										| Female
							-	}

				div(class = 'form-group')
					label= category
						for item in items							
							div(class = 'row')
								div(class = 'col-xs-3 col-md-3')
									label(class = 'radio-line')
									<!-- This if statement is used for alignment-->
									- if (items.indexOf(item) != -1)
										| #{item}
								div(class = 'col-xs-3 col-md-3')
									label(class = 'radio-line')
									-	if(like != undefined && like.indexOf(item) != -1){
											input(type = 'radio', name = item, id = item + 'like', value = 'like', checked = 'checked')
											| Like
									-	}else{
											input(type = 'radio', name = item, id = item + 'like', value = 'like')
											| Like	
									-}
								div(class = 'col-xs-3 col-md-3')
									label(class = 'radio-line')
									-	if(dontcare != undefined && dontcare.indexOf(item) != -1){
											input(type = 'radio', name = item, id = item + 'dontcare', value = 'dontcare', checked = 'checked')
											| Don't Care
									-}else{
											input(type = 'radio', name = item, id = item + 'dontcare', value = 'dontcare')
											| Don't Care
									-}		
								div(class = 'col-xs-3 col-md-3')
									label(class = 'radio-line')
									-	if(dislike != undefined && dislike.indexOf(item) != -1){
											input(type = 'radio', name = item, id = item + 'dislike', value = 'dislike', checked = 'checked')
											| Dislike
									-	}else{
											input(type = 'radio', name = item, id = item + 'dislike', value = 'dislike')
											| Dislike
									-}															
				<br />
				<br />
				div(class= 'col-xs-12 col-md-6 col-md-offset-3')
					button(class = 'btn btn-lg btn-primary btn-block', type = 'submit') Update


