extends layout

block content
	form(role='form', class='form-horizontal', method='post')
			legend User Signup
			div(class='form-group')
				div(class= 'col-xs-3')
					label(for='username') Username
					input(type='text',class='form-control',id='username',name= 'username',placeholder='Enter your username here')
			div(class='form-group')
				div(class= 'col-xs-3')
					label(for='password') password
					input(type='password',class='form-control',id='password',name='password')
			div(class='form-group')
				div(class= 'col-xs-3')
					label(for='password') repeat your password
					input(type='password',class='form-control',id='password-repeat',name='password-repeat')
			div(class='form-actions')
				button(type='submit',class='btn btn-primary') register


