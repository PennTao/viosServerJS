extends layout

block content
	form(role='form', class='form-horizontal', method='post')
			legend User Signup
			div(class='form-group')
				div(class= 'col-xs-12 col-md-3')
					label(for='username') username
					input(type='text',class='form-control',id='username',name= 'username',placeholder='Enter your username here')
			div(class='form-group')
				div(class= 'col-xs-12 col-md-3')
					label(for='password') password
					input(type='password',class='form-control',id='password',name='password')
			div(class='form-group')
				div(class= 'col-xs-12 col-md-3')
					label(for='password') repeat your password
					input(type='password',class='form-control',id='password-repeat',name='password-repeat')
			div(class='form-group')
					div(class= 'col-xs-12 col-md-3')
						label(for='gender') Gender				
							input(type= 'radio',name='gender',value='male')
							label(for='gender') Male
							input(type= 'radio', name='gender',value='female')
							label(for='gender') Female
			div(class='form-group')
				div(class= 'col-xs-12 col-md-3')
					div(class='row-fluid')
							div(class='span12')
								label(for='interest') interests
								div(class='row-fluid')
									div(class='span4')
										input(type='checkbox',name='interests',value='electronics')
										label(for='interest') electronics
									div(class='span4')
										input(type='checkbox',name='interests',value='electronics')
										label(for='interest') electronics
									div(class='span4')
										input(type='checkbox',name='interests',value='electronics')
										label(for='interest') electronics

			div(class='form-actions')
				button(type='submit',class='btn btn-primary') register


